<definition component-name="portal-wcm">
	<property name="testray.main.component.name" value="Sitemap" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />

		<execute macro="ProductMenu#gotoControlPanelSites">
			<var name="portlet" value="Sites" />
		</execute>

		<execute macro="Site#addBlankCP">
			<var name="siteName" value="Site Name" />
		</execute>

		<execute macro="ProductMenu#gotoControlPanelSites">
			<var name="portlet" value="Sites" />
		</execute>

		<execute macro="Page#add">
			<var name="pageName" value="Site Page Name" />
			<var name="siteName" value="Site Name" />
			<var name="sitePagePrivacy" value="Private" />
		</execute>

		<execute macro="ProductMenu#gotoControlPanelSites">
			<var name="portlet" value="Sites" />
		</execute>

		<execute macro="ProductMenu#gotoControlPanelSites">
			<var name="portlet" value="Sites" />
		</execute>

		<execute macro="Page#addChild">
			<var name="page" value="Private Pages" />
			<var name="pageName" value="Site Page Name" />
			<var name="siteChildPageName" value="Child Page Name" />
			<var name="siteName" value="Site Name" />
		</execute>
	</set-up>

	<tear-down>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="Site#tearDownCP">
					<var name="siteName" value="Site Name" />
				</execute>
			</else>
		</if>
	</tear-down>

	<command name="DisplayPrivatePageWithChildPage" priority="4">
		<property name="portal.acceptance" value="true" />

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Site Map" />
		</execute>

		<execute macro="Portlet#viewSpecificPG">
			<var name="portletName" value="Site Map" />
		</execute>

		<execute macro="SiteMapPortlet#viewDefaultPG">
			<var name="listChildPageName" value="Child Page Name" />
			<var name="listPageName" value="Site Page Name" />
		</execute>
	</command>

        <command name="DisplayHiddenPage" priority="4">
			<property name="portal.acceptance" value="true" />      

            <execute macro="SitePageNavigator#gotoEditPage">
                <var name="page" value="Site Page Name 2"/>
            </execute>

            <execute function="Click" locator1="TextInput#NAME"/>
            <execute function="Click" locator1="Button#HIDE_PAGE_TOGGLE"/>
            <execute macro="Button#clickSave" />
            <execute macro="ProductMenu#gotoSite" >
                <var name="site" value="Site Name"/>
            </execute>

            <execute macro="Portlet#gotoPortletOptions">
                 <var name="portletName" value="Site Map" />
                 <var name="portletOption" value="Configuration"/>
            </execute> 

            <if>     
                    <condition function="IsElementNotPresent" locator1="IFrame#LOADING_MESSAGE" />    

                    <then>
                        <execute function="SelectFrame" locator1="IFrame#CONFIGURATION" />
                        <execute function="Click" locator1="SiteMapConfiguration#SHOW_HIDDEN_PAGES_TOGGLE"/>
                    </then>
                    <else>
                        <execute function="Pause" locator1="3000" />
                        <execute function="Click" locator1="SiteMapConfiguration#SHOW_HIDDEN_PAGES_TOGGLE"/>
                    </else>
             </if>
            
            <execute macro="Button#clickSave" />
            <execute macro="Alert#viewSuccessMessage"/>
            <execute function="SelectFrameTop" value1="relative=top"/>
            <execute function="Click" locator1="Icon#CLOSE"/>

        <var name="N" value="2"/> 
        <for list="1,2" param="M">
            <execute macro="SiteMapPortlet#viewDefaultPG">
                <var name="listChildPageName" value="Child Page Name 2${M}"/>
                <var name="listPageName" value="Site Page Name 2"/>
            </execute>
        </for>
    </command>

	<command name="DisplayPageWithMulticolumnLayoutTemplate" priority="4">

            <execute macro="Portlet#gotoPortletOptions">
                 <var name="portletName" value="Site Map" />
                 <var name="portletOption" value="Configuration"/>
             </execute>    

            <if>     
                    <condition function="IsElementNotPresent" locator1="IFrame#LOADING_MESSAGE" />    

                    <then>
                        <execute function="SelectFrame" locator1="IFrame#CONFIGURATION" />
                        <execute function="Click" locator1="SiteMapConfiguration#MULTI_COLUMN_DISPLAY_TEMPLATE_SELECT"/>
                        <execute function="Check" locator1="SiteMapConfiguration#MULTI_COLUMN_DISPLAY_TEMPLATE_SELECT"/>
                    </then>
                    <else>
                        <execute function="Pause" locator1="3000" />
                        <execute function="Click" locator1="SiteMapConfiguration#MULTI_COLUMN_DISPLAY_TEMPLATE_SELECT"/>
                        <execute function="Check" locator1="SiteMapConfiguration#MULTI_COLUMN_DISPLAY_TEMPLATE_SELECT"/>
                    </else>
             </if>
            
            <execute macro="Button#clickSave" />
            <execute macro="Alert#viewSuccessMessage"/>
            <execute function="SelectFrameTop" value1="relative=top"/>
            <execute function="Click" locator1="Icon#CLOSE"/>

            <execute macro="SiteMapPortlet#viewCustomADTMultiColumnPG">
                <var name="listPageName" value="Site Page Name"/>
                <var name="listChildPageName" value="Child Page Name"/>
            </execute>
    </command>
</definition>