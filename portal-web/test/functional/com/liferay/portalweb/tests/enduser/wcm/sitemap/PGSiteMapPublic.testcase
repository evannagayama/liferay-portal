<definition component-name="portal-wcm">
	<property name="testray.main.component.name" value="Sitemap" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />

		<execute macro="ProductMenu#gotoControlPanelSites">
			<var name="portlet" value="Sites" />
		</execute>

		<execute macro="Site#addBlankCP">
			<var name="siteName" value="Site Name" />
		</execute>

		<var name="listPageName" value="Site Page Name 1,Site Page Name 2" />

		<for list="${listPageName}" param="pageName">
			<execute macro="ProductMenu#gotoControlPanelSites">
				<var name="portlet" value="Sites" />
			</execute>

			<execute macro="Page#add">
				<var name="siteName" value="Site Name" />
				<var name="pageName" value="${pageName}" />
			</execute>
		</for>

		<var name="childListPageName1" value="Child Site Page Name 1.1,Child Site Page Name 1.2" />

		<for list="${childListPageName1}" param="childPageName">
			<execute macro="ProductMenu#gotoControlPanelSites">
				<var name="portlet" value="Sites" />
			</execute>

			<execute macro="Page#addChild">
				<var name="childSitepageName" value="true" />
				<var name="page" value="Public Pages" />
				<var name="siteChildPageName" value="${childPageName}" />
				<var name="siteName" value="Site Name" />
				<var name="sitePageName" value="Site Page Name 1" />
			</execute>
		</for>

		<var name="childListPageName2" value="Child Site Page Name 2.1,Child Site Page Name 2.2" />

		<for list="${childListPageName2}" param="childPageName">
			<execute macro="ProductMenu#gotoControlPanelSites">
				<var name="portlet" value="Sites" />
			</execute>

			<execute macro="Page#addChild">
				<var name="childSitepageName" value="true" />
				<var name="page" value="Public Pages" />
				<var name="siteChildPageName" value="${childPageName}" />
				<var name="siteName" value="Site Name" />
				<var name="sitePageName" value="Site Page Name 2" />
			</execute>
		</for>
	</set-up>

	<tear-down>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="Site#tearDownCP">
					<var name="siteName" value="Site Name" />
				</execute>
			</else>
		</if>
	</tear-down>

	<command name="DisplayPublicPagesWChildrenPagesasAdm" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Site Map" />
		</execute>

		<execute macro="Portlet#viewSpecificPG">
			<var name="portletName" value="Site Map" />
		</execute>

		<execute macro="SiteMapPortlet#viewDefaultPG">
			<var name="listChildPageName" value="${childListPageName1},${childListPageName2}" />
			<var name="listPageName" value="${listPageName}" />
		</execute>
	</command>
</definition>